<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite el boton que quiere que muestre en el circuito"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101" />

    <Button
        android:id="@+id/onLed"
        android:layout_width="149dp"
        android:layout_height="56dp"
        android:layout_marginTop="44dp"
        android:text="Encender Led"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/texto"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/lcdBoton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:text="Mostrar LCD"
        app:layout_constraintStart_toEndOf="@+id/onLed"
        tools:layout_editor_absoluteY="153dp" />

    <Button
        android:id="@+id/offLed"
        android:layout_width="152dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:text="Apagar Led"
        app:layout_constraintEnd_toEndOf="@+id/onLed"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/onLed"
        app:layout_constraintTop_toBottomOf="@+id/onLed" />

    <Button
        android:id="@+id/sec1"
        android:layout_width="146dp"
        android:layout_height="48dp"
        android:layout_marginTop="80dp"
        android:text="Secuencia1"
        app:layout_constraintTop_toBottomOf="@+id/offLed"
        tools:layout_editor_absoluteX="19dp" />

    <Button
        android:id="@+id/sec2"
        android:layout_width="147dp"
        android:layout_height="46dp"
        android:layout_marginTop="80dp"
        android:text="Secuencia 2"
        app:layout_constraintTop_toBottomOf="@+id/sec1"
        tools:layout_editor_absoluteX="19dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hecho Por: Gustavo Rodriguez Calzada"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="685dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/lcdBoton"
        app:layout_constraintVertical_bias="0.308"
        app:srcCompat="@drawable/uaem"
        tools:layout_editor_absoluteX="187dp" />

</androidx.constraintlayout.widget.ConstraintLayout>